# Use npm registry
registry=https://registry.npmjs.org/
# Enable strict peer dependencies
strict-peer-dependencies=false
# Use node-linker for better compatibility
node-linker=hoisted
# Increase network timeout for slow connections
network-timeout=60000
# Disable fund messages
fund=false
# Disable audit
audit=false
# Use lockfile
lockfile=true
# Use frozen lockfile for CI
prefer-frozen-lockfile=true
